<% include ../partials/header %>

<div class="container text-center">
    <h1 class="display-4">Edit the comment </h1>

    <div class="container" style="width: 50%; margin:2% auto">
        <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="name" class="form-control" aria-describedby="emailHelp" name=comment[text] value="<%=comment.text %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
    <a href="/campgrounds">Back to campgrounds</a>
    <div><% include ../partials/footer %></div>
</div>


    