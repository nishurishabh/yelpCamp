<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h1>Yelp Camp</h1>
            <ul class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <!-- Cards Goes here -->
            <div class="row">
                <div class="card">
                        <div class="card-header display-4">
                            <%= campground.name %>
                        </div>
                        <div class="card-body">
                            <img src="<%=campground.image%>" class="img-fluid"> </h1>
                            <h5 class="card-title">$9.00/night</h5>
                            <p class="card-text"><%=campground.description%></p>
                            <p>
                                Submitted By <em><%= campground.author.username %></em>
                            </p>
                            <p>
                                <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
                            </p>
                            <form method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="card w-75">
                    <div class="card-body">
                        <h5 class="card-title">Comments</h5> <hr>
                        <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-primary pull-right">Add a review</a>
                        <hr>    
                        <ul class="list-group">
                            <% campground.comments.forEach(function(comment) { %>
                                <li class="list-group-item"> <strong><%= comment.author.username %></strong> - <%= comment.text %> </li>
                                <li>
                                    <div class="float-right">
                                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/?_method=DELETE" method="post">
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>
                                    </div>
                                </li> 
                            <% }) %>
                        </ul>
                    </div>  
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <a href="/" class="btn btn-danger"> Back</a>
</p>        
<% include partials/footer %>